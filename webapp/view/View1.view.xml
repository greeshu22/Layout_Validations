<mvc:View
    controllerName="com.anjali.layout.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
>
    <Page
        id="page"
        title="Employee Information Page"
    >
        <content>
            <Panel headerText="Employee Details">
                <l:Grid
                    vSpacing="0"
                    defaultSpan="L6 M6"
                >
                    <l:content>
                        <Label text="Employee id" />
                        <Input />

                        <Label text="Employee Name" />
                        <Input />

                        <Label text="Employee Skill" />
                        <Input />

                        <Label text="Employee Designation" />
                        <Input />
                    </l:content>
                </l:Grid>
            </Panel>



            <Panel headerText="EmployeeDetails">
            <l:Grid vSpacing="0">
            <l:content>
            
            <Label text="Employee Id">
            <layoutData>
            <l:GridData span="L3 M3"></l:GridData>
            </layoutData>
            </Label>
            <Input >
            <layoutData>
            <l:GridData span="L6 M6"></l:GridData>
            </layoutData>
            </Input>

            <Label text="Employee name">
            <layoutData>
            <l:GridData span="L3 M3" linebreak="true"></l:GridData>
            </layoutData>
            </Label>
            <Input >
            <layoutData>
            <l:GridData span="L6 M6"></l:GridData>
            </layoutData>
            </Input>

            <Label text="Employee designation">
            <layoutData>
            <l:GridData span="L3 M3" linebreak="true"></l:GridData>
            </layoutData>
            </Label>
            <Input >
            <layoutData>
            <l:GridData span="L6 M6"></l:GridData>
            </layoutData>
            </Input>

            <Label text="Employee skill">
            <layoutData>
            <l:GridData span="L3 M3" linebreak="true"></l:GridData>
            </layoutData>
            </Label>
            <Input >
            <layoutData>
            <l:GridData span="L6 M6"></l:GridData>
            </layoutData>
            </Input>
            </l:content>
            
            
            </l:Grid>
            
            
            </Panel>


            <Panel headerText="Employee details">
            <l:Grid vSpacing="0" defaultSpan="L3 M3">
            <l:content>
            <Label text="Employee Name"></Label>
            <Input ></Input>

             <Label text="Employee id"></Label>
            <Input ></Input>

             <Label text="Employee desig"></Label>
            <Input ></Input>

             <Label text="Employee Skill"></Label>
            <Input ></Input>
            </l:content>
            
            </l:Grid>
            
            
            
            </Panel>

            <Panel headerText="Employee details">
            <l:Grid vSpacing="0" defaultSpan="L2 M2">
            <l:content>
            
              <Label text="Employee Name"></Label>
            <Input ></Input>

             <Label text="Employee id"></Label>
            <Input ></Input>

             <Label text="Employee desig"></Label>
            <Input ></Input>

             <Label text="Employee Skill"></Label>
            <Input ></Input>
            </l:content>
            
            
            
            </l:Grid>
            
            
            
            </Panel>
        </content>
        <footer>
        <Bar >
        <contentRight>
          <Button text="Validations" type="Emphasized" press="onButtonToView6"></Button>
        <Button text="Show Simple Form layout" type="Emphasized" press="onButtonToView2"></Button>
        <Button text="Show HBox Vbox FlexBox" type="Emphasized" press="onButtonToView3"></Button>
         <Button text="Show Object header and Icom Tab bar" type="Emphasized" press="onButtonToView4"></Button>
         <Button text="Show Object Page layout" type="Emphasized" press="onButtonToView5"></Button>
        </contentRight>
        </Bar>
        </footer>
    </Page>
</mvc:View>
