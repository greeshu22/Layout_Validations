    <Page
        id="page"
        title="Object Page header and Icon Tab bar" showNavButton="true" navButtonPress="onBack"
    >
        <content>
         <ObjectHeader title="Ravi krishna" number="15000" numberUnit="INR" backgroundDesign="Solid" >
         <attributes>
         <ObjectAttribute title="Emp Id" text="1620004"></ObjectAttribute>
         <ObjectAttribute title="Designation" text="Sr.Employee"></ObjectAttribute>
         </attributes>

         <statuses>
         <ObjectStatus text="Selected"></ObjectStatus>
         </statuses>
         
         </ObjectHeader>
         <IconTabBar >
         <items>
         <IconTabFilter icon="sap-icon://information" >
         <f:SimpleForm  editable="false">
         <f:content>
         <Label text="Employee id"></Label>
         <Text text="162004"></Text>
           <Label text="Employee Name"></Label>
         <Text text="Ravi krishna"></Text>
           <Label text="Employee Designation"></Label>
         <Text text="Sr.employee"></Text>
           <Label text="Employee Skill"></Label>
         <Text text="ABAP,Ui5"></Text>
         </f:content>
         
         </f:SimpleForm>
         
         </IconTabFilter>
         

         <IconTabFilter icon="sap-icon://create-form">
              <f:SimpleForm  editable="true" layout="ResponsiveGridLayout" labelSpanL="2" emptySpanL="4">
         <f:content>
         <Label text="Employee id"></Label>
         <Input></Input>
           <Label text="Employee Name"></Label>
              <Input></Input>
           <Label text="Employee Designation"></Label>
               <Input></Input>
           <Label text="Employee Skill"></Label>
             <Input></Input>
